rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ======== USERS COLLECTION ========
    // Only collection actively used in Firestore (for authentication/authorization)
    // All other data (universities, campuses, restaurants, menus, mart items, orders) is in MongoDB

    // Allow each user to read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Super Admin can read all users and manage them (except delete their own profile)
    match /users/{userId} {
      allow read: if request.auth != null && isSuperAdmin();
      allow write: if request.auth != null && isSuperAdmin() && request.auth.uid != userId;
    }

    // ======== Helper Functions ========
    function isSuperAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superAdmin";
    }

    // Deny all other collections by default
    // (universities, campuses, restaurants, menuItems, martItems, orders are in MongoDB)
    match /{document=**} {
      allow read, write: if false;
    }

  }
} 